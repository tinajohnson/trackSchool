  <script>
    $('.datepicker').pickadate({
      selectMonths: true, // Creates a dropdown to control month
      selectYears: 15 // Creates a dropdown of 15 years to control year
    });
  </script>

  <form action="/show_selected_id">
    <div >
      <div class="row">
        <div class="col s2">
          <b>Choose Date: </b><br>
          <!--<input type="date" value="date" name="date" id="date" content="date">-->
          <%= react_component('Date') %>
        </div>
      </div>
    </div>


    <% t = 0 %>
    <% stud = Student.all %>
    <% stud.each do |stud| %>
        <% t+=4 %>
      <%if stud.class_mapping_id == @mapping_id %>
        <b>Name: <%=stud. name%><br>Roll No: <%=stud.id%></b><br>
            <input name= <%=stud.id%> type="radio" id=<%= t%> value="Present" />
            <label for=<%= t%>>Present</label>
            <input name=<%=stud.id%> type="radio" id=<%= t+1%> value="Half" />
            <label for=<%= t+1%>>Half Day</label>
            <input name=<%=stud.id%> type="radio" id=<%= t+2%> value="Uninformed"  />
            <label for=<%= t+2%>>Uninformed Absent</label>
            <input name=<%=stud.id%> type="radio" id=<%= t+3%> value="Informed"  />
            <label for=<%= t+3%>>Informed Absent</label> <br><br>

  <% end %>
    <%end%>
    <!--<button class="btn waves-effect waves-light" type="submit" name="action">Submit-->
    <!--</button>-->
    <%= react_component('Submit') %>
  </form>

