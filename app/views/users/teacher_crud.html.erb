<h3> Manage Teachers</h3>




<table>
  <thead>
  <tr>
    <th>Teacher ID</th>
    <th>Class Mapping ID</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% allot = Allotment .all %>
  <% allot.each do |allot| %>
      <tr>
        <% if allot.role == "Teacher" %>
          <td><%= allot.user_id %></td>
          <td><%= allot.class_mappings_id %></td>
            <td><%= link_to "Delete" , teacher_delete_path(id: allot.id)%></td>
            <td><%= link_to "Allot" ,  teacher_allot_classes_path(id: allot.user_id) %></td>
      <% end %>
  <% end %>
  </tbody>
</table>

